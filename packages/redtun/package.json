{
  "name": "@neonredwood/redtun",
  "version": "1.0.8",
  "description": "Tunnel client for redtun reverse proxy.",
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "build:dist": "tsup",
    "clean": "rimraf ./dist ./tsconfig*tsbuildinfo",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "jest --passWithNoTests"
  },
  "bin": "./dist/client.bundle.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist",
    "./src"
  ],
  "keywords": [
    "redtun",
    "tunnel",
    "proxy",
    "client",
    "nat",
    "http",
    "websockets"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/neonredwood/redtun.git",
    "directory": "packages/redtun"
  },
  "bugs": {
    "url": "https://github.com/neonredwood/redtun/issues"
  },
  "homepage": "https://github.com/neonredwood/redtun#readme",
  "author": "Phil Kallos <phil@neonredwood.com>",
  "license": "GPLV3",
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/blessed": "^0.1.25",
    "@types/jest": "^29.5.14",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.4.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "commander": "^12.1.0",
    "kolorist": "^1.8.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "ts-node": "^10.9.2",
    "ws": "^8.18.0"
  }
}
