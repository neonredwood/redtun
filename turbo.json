{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "//#lint": {
      "inputs": ["!.git/**", "!node_modules/**", "!packages/**"]
    },
    "//#lint:fix": {
      "inputs": ["!.git/**", "!node_modules/**", "!packages/**"]
    },
    "//#format": {
      "inputs": ["!.git/**", "!node_modules/**", "!packages/**"]
    },
    "//#format:fix": {
      "inputs": ["!.git/**", "!node_modules/**", "!packages/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@neonredwood/redtun#build": {
      "dependsOn": ["@neonredwood/redtun-common#build"]
    },
    "@neonredwood/redtun-server#build": {
      "dependsOn": ["@neonredwood/redtun-common#build"]
    },
    "build:dist": {
      "dependsOn": ["build", "^build:dist"],
      "outputs": ["dist/*.bundle.js"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "lint:fix": {},
    "format": {},
    "format:fix": {},
    "test": {
      "dependsOn": ["build"]
    }
  },
  "globalDependencies": [
    ".eslintrc.js",
    ".eslintignore",
    ".lintstagedrc.js",
    ".prettierrc.yaml",
    "tsconfig.base.json",
    "tsconfig.build.json",
    "tsconfig.json"
  ]
}
